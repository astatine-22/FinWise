<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Question Number and Text -->
        <TextView
            android:id="@+id/tvQuestionNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question 1"
            android:textSize="12sp"
            android:textColor="@color/finwise_green"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvQuestionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is the stock market?"
            android:textSize="16sp"
            android:textColor="@color/text_title"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- RadioGroup for Options -->
        <RadioGroup
            android:id="@+id/radioGroupOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioOptionA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option A"
                android:textSize="14sp"
                android:textColor="@color/text_title"
                android:padding="8dp"
                android:layout_marginBottom="4dp" />

            <RadioButton
                android:id="@+id/radioOptionB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option B"
                android:textSize="14sp"
                android:textColor="@color/text_title"
                android:padding="8dp"
                android:layout_marginBottom="4dp" />

            <RadioButton
                android:id="@+id/radioOptionC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option C"
                android:textSize="14sp"
                android:textColor="@color/text_title"
                android:padding="8dp"
                android:layout_marginBottom="4dp" />

            <RadioButton
                android:id="@+id/radioOptionD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option D"
                android:textSize="14sp"
                android:textColor="@color/text_title"
                android:padding="8dp" />

        </RadioGroup>

        <!-- XP Badge -->
        <TextView
            android:id="@+id/tvXpValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="â­ 10 XP"
            android:textSize="12sp"
            android:textColor="@color/finwise_green"
            android:textStyle="bold"
            android:background="@drawable/bg_category_chip"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
