<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Header -->
    <TextView
        android:id="@+id/tvQuizHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Time!"
        android:textColor="@color/text_title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Question -->
    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="What is the primary purpose of a budget?"
        android:textColor="@color/text_title"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvQuizHeader" />

    <!-- Radio Group for Options -->
    <RadioGroup
        android:id="@+id/radioGroupOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion">

        <RadioButton
            android:id="@+id/rbOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/finwise_green"
            android:padding="12dp"
            android:text="To track spending and save money"
            android:textColor="@color/text_subtitle"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/finwise_green"
            android:padding="12dp"
            android:text="To increase credit score"
            android:textColor="@color/text_subtitle"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/finwise_green"
            android:padding="12dp"
            android:text="To impress friends"
            android:textColor="@color/text_subtitle"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbOption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/finwise_green"
            android:padding="12dp"
            android:text="To avoid taxes"
            android:textColor="@color/text_subtitle"
            android:textSize="16sp" />
    </RadioGroup>

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmitAnswer"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/finwise_green"
        android:text="Submit Answer"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroupOptions" />

    <!-- Success Overlay (Hidden by default) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvSuccessOverlay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="10dp"
        android:visibility="gone"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Trophy Icon -->
            <ImageView
                android:id="@+id/ivTrophy"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Trophy"
                android:src="@drawable/ic_trophy" />

            <!-- Success Title -->
            <TextView
                android:id="@+id/tvSuccessTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Quiz Complete!"
                android:textColor="@color/text_title"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- XP Reward -->
            <TextView
                android:id="@+id/tvXpReward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="+50 XP"
                android:textColor="@color/finwise_green"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Claim Button -->
            <Button
                android:id="@+id/btnClaimReward"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/finwise_green"
                android:text="Claim Reward"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
