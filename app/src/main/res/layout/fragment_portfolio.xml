<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:paddingBottom="80dp"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Portfolio Summary Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/bg_balance_card_green"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Portfolio Value"
                android:textColor="#FFFFFFCC"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTotalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹1,00,000.00"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash Balance"
                        android:textColor="#FFFFFFAA"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvCashBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹1,00,000.00"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invested"
                        android:textColor="#FFFFFFAA"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvInvestedValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹0.00"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBuyAsset"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Buy Asset"
                android:textAllCaps="false"
                app:cornerRadius="24dp"
                app:backgroundTint="#22C55E" />

            <View
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResetPortfolio"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Reset"
                android:textAllCaps="false"
                android:textColor="#6B7280"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="#E5E7EB"
                app:cornerRadius="24dp" />
        </LinearLayout>

        <!-- Holdings Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your Holdings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_title" />

            <TextView
                android:id="@+id/tvHoldingsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 assets"
                android:textSize="14sp"
                android:textColor="@color/text_subtitle" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHoldings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:nestedScrollingEnabled="false" />

        <!-- Empty Holdings State -->
        <LinearLayout
            android:id="@+id/emptyHoldingsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_chart"
                app:tint="@color/text_subtitle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Holdings Yet"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_title"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start trading by buying your first asset!"
                android:textSize="14sp"
                android:textColor="@color/text_subtitle"
                android:layout_marginTop="8dp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
