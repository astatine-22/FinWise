<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header Section with Tabs only (Trade title is in MainActivity) -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <!-- Sub-tabs: Indian | US | Crypto | Portfolio -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabTextColor="#6B7280"
            app:tabSelectedTextColor="#22C55E"
            app:tabIndicatorColor="#22C55E"
            app:tabIndicatorHeight="3dp"
            app:tabIndicatorFullWidth="false"
            app:tabRippleColor="@android:color/transparent"
            app:tabTextAppearance="@style/TabTextAppearance">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indian" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="US" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crypto" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Portfolio" />
        </com.google.android.material.tabs.TabLayout>
    </LinearLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- STOCKS TAB CONTENT -->
            <LinearLayout
                android:id="@+id/stocksTabContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- Total Balance Card (Green Gradient) -->
                <LinearLayout
                    android:id="@+id/walletHeroCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_balance_card_green"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Balance"
                        android:textColor="#FFFFFFCC"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/tvWalletBalance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="â‚¹74,999.20"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/btnInvestNow"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_button_invest_now"
                            android:gravity="center"
                            android:paddingHorizontal="20dp"
                            android:text="Invest Now"
                            android:textColor="#22C55E"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Market Overview Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="Market Overview"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:scrollbars="none"
                    android:clipToPadding="false"
                    android:paddingHorizontal="16dp">

                    <LinearLayout
                        android:id="@+id/marketIndicesLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <!-- Category Chips -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:paddingHorizontal="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/chipExplore"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_chip_selected"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:text="Explore"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/chipTopGainers"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_chip_unselected"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:text="Top Gainers"
                        android:textColor="#6B7280"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/chipTopLosers"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_chip_unselected"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:text="Top Losers"
                        android:textColor="#6B7280"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Stocks List -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvStocks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmerStocks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include layout="@layout/layout_shimmer_stock_placeholder" />
                            <include layout="@layout/layout_shimmer_stock_placeholder" />
                            <include layout="@layout/layout_shimmer_stock_placeholder" />
                            <include layout="@layout/layout_shimmer_stock_placeholder" />
                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- US STOCKS TAB CONTENT (Full Dashboard) -->
            <LinearLayout
                android:id="@+id/usStocksTabContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- US Portfolio Card (Blue Theme) -->
                <LinearLayout
                    android:id="@+id/usPortfolioCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_balance_card_blue"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‡ºðŸ‡¸ US Portfolio"
                        android:textColor="#FFFFFFCC"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/tvUsPortfolioValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="â‚¹0.00"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/btnUsInvestNow"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_button_invest_now_blue"
                            android:gravity="center"
                            android:paddingHorizontal="20dp"
                            android:text="Invest"
                            android:textColor="#3B82F6"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="US Holdings"
                                android:textColor="#FFFFFFAA"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvUsHoldingsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 stocks"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Exchange Rate"
                                android:textColor="#FFFFFFAA"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvUsExchangeRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$1 = â‚¹84.00"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Top US Gainers Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“ˆ Top Gainers"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />

                    <TextView
                        android:id="@+id/tvUsGainersCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#22C55E"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvUsGainers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:paddingHorizontal="12dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <!-- Top US Losers Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“‰ Top Losers"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />

                    <TextView
                        android:id="@+id/tvUsLosersCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#EF4444"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvUsLosers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:paddingHorizontal="12dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <!-- All US Stocks Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="ðŸ—½ All US Stocks"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937" />

                <!-- US Stocks List -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvUsStocks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmerUsStocks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include layout="@layout/layout_shimmer_stock_placeholder" />
                            <include layout="@layout/layout_shimmer_stock_placeholder" />
                            <include layout="@layout/layout_shimmer_stock_placeholder" />
                            <include layout="@layout/layout_shimmer_stock_placeholder" />
                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- CRYPTO TAB CONTENT -->
            <LinearLayout
                android:id="@+id/cryptoTabContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Popular Cryptocurrencies"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCrypto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmerCrypto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include layout="@layout/layout_shimmer_crypto_placeholder" />
                            <include layout="@layout/layout_shimmer_crypto_placeholder" />
                            <include layout="@layout/layout_shimmer_crypto_placeholder" />
                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- PORTFOLIO TAB CONTENT -->
            <LinearLayout
                android:id="@+id/portfolioTabContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Portfolio Summary Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@drawable/bg_balance_card_green"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Portfolio Value"
                        android:textColor="#FFFFFFCC"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvTotalValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹1,00,000.00"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cash Balance"
                                android:textColor="#FFFFFFAA"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvCashBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¹1,00,000.00"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Invested"
                                android:textColor="#FFFFFFAA"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvInvestedValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¹0.00"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBuyAsset"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Buy Asset"
                        android:textAllCaps="false"
                        app:cornerRadius="24dp"
                        app:backgroundTint="#22C55E" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnResetPortfolio"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Reset"
                        android:textAllCaps="false"
                        android:textColor="#6B7280"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:strokeColor="#E5E7EB"
                        app:cornerRadius="24dp" />
                </LinearLayout>

                <!-- Holdings Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Your Holdings"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />

                    <TextView
                        android:id="@+id/tvHoldingsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 assets"
                        android:textSize="14sp"
                        android:textColor="#6B7280" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHoldings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:nestedScrollingEnabled="false" />

                <!-- Empty Holdings State -->
                <LinearLayout
                    android:id="@+id/emptyHoldingsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="40dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_chart"
                        app:tint="#D1D5DB" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Holdings Yet"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start trading by buying your first asset!"
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FAB for Quick Buy -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabQuickBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="#22C55E"
        app:tint="#FFFFFF"
        app:fabSize="normal"
        android:contentDescription="Quick Buy" />

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
