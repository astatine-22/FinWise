<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="14dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- Stock Icon Circle -->
    <TextView
        android:id="@+id/tvStockIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_circle_symbol"
        android:gravity="center"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="R" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <!-- Stock Name -->
        <TextView
            android:id="@+id/tvStockName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reliance Industries"
            android:textColor="#333333"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Stock Symbol -->
        <TextView
            android:id="@+id/tvStockSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RELIANCE"
            android:textColor="#757575"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Exchange Badge -->
    <TextView
        android:id="@+id/tvExchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_exchange_badge"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="NSE/BSE"
        android:textColor="#4CAF50"
        android:textSize="10sp"
        android:textStyle="bold" />

</LinearLayout>
