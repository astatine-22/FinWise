<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    android:padding="20dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/tvQuizTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Quiz"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Question Counter -->
    <TextView
        android:id="@+id/tvQuestionCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 1 of 5"
        android:textSize="14sp"
        android:textColor="@color/finwise_green"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressQuiz"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:progressDrawable="@drawable/progress_bar_green"
        android:max="100"
        android:progress="20"
        android:layout_marginBottom="24dp" />

    <!-- Question Text -->
    <TextView
        android:id="@+id/tvQuestionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp"
        tools:text="What does IPO stand for?" />

    <!-- Answer Options -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOptionA"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:cornerRadius="12dp"
        app:strokeColor="@color/finwise_green"
        app:strokeWidth="1dp"
        tools:text="A. Initial Public Offering" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOptionB"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:cornerRadius="12dp"
        app:strokeColor="@color/finwise_green"
        app:strokeWidth="1dp"
        tools:text="B. Indian Public Office" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOptionC"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:cornerRadius="12dp"
        app:strokeColor="@color/finwise_green"
        app:strokeWidth="1dp"
        tools:text="C. Internal Profit Order" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOptionD"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:cornerRadius="12dp"
        app:strokeColor="@color/finwise_green"
        app:strokeWidth="1dp"
        tools:text="D. Initial Private Owner" />

    <!-- Spacer to push button to bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Next Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/finwise_green" />

</LinearLayout>
