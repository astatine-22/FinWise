<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/card_budget_bg"
    app:strokeWidth="1dp"
    app:strokeColor="@color/divider_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Index Name (Small, Grey, Uppercase) -->
        <TextView
            android:id="@+id/tvIndexName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIFTY 50"
            android:textSize="12sp"
            android:textColor="@color/text_subtitle"
            android:textAllCaps="true"
            android:letterSpacing="0.03" />

        <!-- Index Value (Bold, Black) -->
        <TextView
            android:id="@+id/tvIndexValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26,129.6"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_title"
            android:layout_marginTop="8dp" />

        <!-- Change Text (Green/Red) -->
        <TextView
            android:id="@+id/tvIndexChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+0.74%"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#22C55E"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
