<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Full Screen Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomSection">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Dark Green Header Section (Scrollable) -->
            <LinearLayout
                android:id="@+id/headerSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_header_dark_green"
                android:paddingTop="24dp"
                android:paddingBottom="80dp">

                <!-- Top Row: Back + Title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_arrow_back"
                        android:padding="6dp"
                        app:tint="#FFFFFF"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                    <TextView
                        android:id="@+id/tvStockSymbol"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Loading..."
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginEnd="36dp" />
                </LinearLayout>

                <!-- Search Section (Unused) -->
                <LinearLayout
                    android:id="@+id/searchSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    android:visibility="gone">

                    <!-- Search Input -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_search_field_dark"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_search"
                            app:tint="#88FFFFFF" />

                        <EditText
                            android:id="@+id/etSymbol"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:hint="Search stocks (e.g., Reliance, HDFC)"
                            android:textColorHint="#88FFFFFF"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:background="@null"
                            android:inputType="text"
                            android:imeOptions="actionSearch"
                            android:singleLine="true" />
                    </LinearLayout>

                    <!-- Search Suggestions -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/suggestionsCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginTop="8dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvSuggestions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="300dp"
                            android:nestedScrollingEnabled="false" />
                    </androidx.cardview.widget.CardView>

                    <!-- Instruction Text -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Type at least 2 characters to search"
                        android:textColor="#88FFFFFF"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="12dp" />
                </LinearLayout>

                <!-- Stock Details Section (Shown default) -->
                <LinearLayout
                    android:id="@+id/stockDetailsSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="visible">

                    <!-- Stock Name Subtitle -->
                    <TextView
                        android:id="@+id/tvStockName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reliance Industries Ltd."
                        android:textColor="#B0D4C8"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                    <!-- Price Display -->
                    <TextView
                        android:id="@+id/tvCurrentPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹2,450.00"
                        android:textColor="#FFFFFF"
                        android:textSize="42sp"
                        android:textStyle="bold"
                        android:layout_marginTop="24dp" />

                    <!-- Price Change Pill -->
                    <TextView
                        android:id="@+id/tvPriceChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_pill_translucent"
                        android:paddingHorizontal="14dp"
                        android:paddingVertical="6dp"
                        android:text="+₹29.50 (+1.22%)"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp" />

                    <!-- Day High/Low Stats -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="32dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Day High"
                                android:textColor="#88FFFFFF"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvDayHigh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹2,480.00"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="32dp"
                            android:background="#33FFFFFF" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginStart="32dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Day Low"
                                android:textColor="#88FFFFFF"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvDayLow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹2,410.00"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- White Content Area (Overlaps Header) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_content_rounded_top"
                android:backgroundTint="@color/white"
                android:layout_marginTop="-60dp"
                android:paddingTop="20dp"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp">

                <!-- Chart Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/chartCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Chart Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Price History"
                                android:textColor="@color/text_title"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <!-- Period Tabs -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/bg_period_tabs"
                                android:padding="3dp">

                                <TextView
                                    android:id="@+id/btn1D"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:paddingHorizontal="14dp"
                                    android:gravity="center"
                                    android:text="1D"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="#FFFFFF"
                                    android:background="@drawable/bg_period_selected" />

                                <TextView
                                    android:id="@+id/btn1W"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:paddingHorizontal="14dp"
                                    android:gravity="center"
                                    android:text="1W"
                                    android:textSize="12sp"
                                    android:textColor="#6B7280" />

                                <TextView
                                    android:id="@+id/btn1M"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:paddingHorizontal="14dp"
                                    android:gravity="center"
                                    android:text="1M"
                                    android:textSize="12sp"
                                    android:textColor="#6B7280" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Line Chart -->
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/priceChart"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_marginTop="12dp" />

                        <ProgressBar
                            android:id="@+id/chartLoading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- BUY / SELL Tabs -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_tab_container"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/tabBuy"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="BUY"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_tab_selected_green" />

                    <TextView
                        android:id="@+id/tabSell"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SELL"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#6B7280" />
                </LinearLayout>

                <!-- Info Cards Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <!-- Available Cash -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/logo_circle_bg">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AVAILABLE CASH"
                                android:textColor="@color/text_subtitle"
                                android:textSize="10sp"
                                android:letterSpacing="0.05" />

                            <TextView
                                android:id="@+id/tvAvailableCash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹1,00,000.00"
                                android:textColor="@color/text_title"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:layout_marginTop="6dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Holdings -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/logo_circle_bg">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="YOUR HOLDINGS"
                                android:textColor="@color/text_subtitle"
                                android:textSize="10sp"
                                android:letterSpacing="0.05" />

                            <TextView
                                android:id="@+id/tvHoldings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 shares"
                                android:textColor="@color/text_title"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:layout_marginTop="6dp" />
                        </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- User Holdings Card (Shows if user owns this stock) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUserHolding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#E8F5E9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvHoldingLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Current Holdings"
                        android:textColor="#6B7280"
                        android:textSize="11sp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/tvHoldingValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="₹15,000"
                            android:textColor="#1B5E20"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvHoldingQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25 Qty"
                            android:textColor="#6B7280"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quantity Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="28dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvQuantityLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of Shares"
                        android:textColor="@color/text_subtitle"
                        android:textSize="13sp" />

                    <!-- Quantity Input -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMinus"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:text="-"
                            android:textSize="28sp"
                            android:textColor="#22C55E"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="#22C55E"
                            app:strokeWidth="2dp"
                            app:cornerRadius="30dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />

                        <EditText
                            android:id="@+id/etQuantity"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="48sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_title"
                            android:gravity="center"
                            android:inputType="number"
                            android:background="@null"
                            android:layout_marginHorizontal="20dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPlus"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:text="+"
                            android:textSize="28sp"
                            android:textColor="#22C55E"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="#22C55E"
                            app:strokeWidth="2dp"
                            app:cornerRadius="30dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />
                    </LinearLayout>

                    <!-- Market Price Helper -->
                    <TextView
                        android:id="@+id/tvMarketPriceHelper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="× Market Price ₹2,450.00"
                        android:textColor="#9CA3AF"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp" />

                    <!-- Quick Percentage Chips -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/chip25"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:paddingHorizontal="24dp"
                            android:gravity="center"
                            android:text="25%"
                            android:textSize="14sp"
                            android:textColor="#6B7280"
                            android:background="@drawable/bg_chip_outline"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/chip50"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:paddingHorizontal="24dp"
                            android:gravity="center"
                            android:text="50%"
                            android:textSize="14sp"
                            android:textColor="#6B7280"
                            android:background="@drawable/bg_chip_outline"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/chipMax"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:paddingHorizontal="24dp"
                            android:gravity="center"
                            android:text="Max"
                            android:textSize="14sp"
                            android:textColor="#6B7280"
                            android:background="@drawable/bg_chip_outline" />
                    </LinearLayout>

                    <!-- Exchange Toggle (NSE/BSE) -->
                    <LinearLayout
                        android:id="@+id/exchangeToggleContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_exchange_toggle"
                        android:padding="4dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/btnNse"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:paddingHorizontal="28dp"
                            android:gravity="center"
                            android:text="NSE"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/bg_exchange_selected" />

                        <TextView
                            android:id="@+id/btnBse"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:paddingHorizontal="28dp"
                            android:gravity="center"
                            android:text="BSE"
                            android:textSize="14sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Section (Fixed) -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="16dp"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Balance Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="14dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Estimated Cost"
                android:textColor="@color/text_subtitle"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvEstimatedCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹2,450.00"
                android:textColor="@color/text_title"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Exchange Rate Info (Shown for USD assets) -->
        <TextView
            android:id="@+id/tvExchangeRateInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Conv. Rate: ₹84.50/$"
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:layout_marginBottom="14dp"
            android:visibility="gone" />

        <!-- Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAction"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="BUY RELIANCE"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            app:backgroundTint="#22C55E" />
    </LinearLayout>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3FFFFFF"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="#22C55E" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
