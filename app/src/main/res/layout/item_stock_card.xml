<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical">

        <!-- Logo Circle with Initial -->
        <FrameLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_logo_circle_light">

            <TextView
                android:id="@+id/tvLogoInitial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="K"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#374151" />
        </FrameLayout>

        <!-- Name and Sector -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvStockName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kotak Mahindra"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_title"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvStockSector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banking"
                android:textSize="13sp"
                android:textColor="@color/text_subtitle"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Price and Change -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvStockPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹2,201.10"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_title" />

            <TextView
                android:id="@+id/tvStockChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2.25%"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#22C55E"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginStart="72dp" />

</LinearLayout>
